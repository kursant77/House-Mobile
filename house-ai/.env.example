# ============================================
# House AI — Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ── App ──────────────────────────────────────
APP_NAME=House AI Assistant
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8100
WORKERS=4
LOG_LEVEL=info
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# ── OpenAI ───────────────────────────────────
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL_DEFAULT=gpt-4o-mini
LLM_MODEL_ADVANCED=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
CONFIDENCE_THRESHOLD=0.7
MAX_CONTEXT_MESSAGES=5

# ── Token Budget ─────────────────────────────
DAILY_TOKEN_BUDGET_PER_USER=100000
SUMMARIZE_TOKEN_THRESHOLD=3000
MAX_RESPONSE_TOKENS=1024

# ── Supabase ─────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# ── Redis ────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_PRODUCTS=86400
CACHE_TTL_COMPARISONS=43200
CACHE_TTL_RAG=21600
CACHE_TTL_CURRENCY=172800
SESSION_MEMORY_MAX_MESSAGES=20

# ── Brave Search ─────────────────────────────
BRAVE_API_KEY=your-brave-search-api-key
BRAVE_SEARCH_COUNT=5

# ── RAG ──────────────────────────────────────
RAG_TOP_K=3
RAG_SIMILARITY_THRESHOLD=0.75

# ── Security ─────────────────────────────────
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_MINUTE_ANON=10

# ── Recommendation Weights ───────────────────
WEIGHT_VALUE=0.40
WEIGHT_GAMING=0.25
WEIGHT_CAMERA=0.20
WEIGHT_TREND=0.15
